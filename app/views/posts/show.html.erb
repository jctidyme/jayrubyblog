
<h1><%= link_to @post.category.name, category_path(@post.category) %> / <%= @post.title %></h1>
<br>
<div class = "post">
<p><small>Blogged <%= @post.created_at.strftime("%b %d. %y") %>, by <%= @post.admin_user.name %></small></p>
<p><%= @post.body %></p>
<hr>


<p>Category: <%= link_to @post.category.name, category_path(:id => @post.category.id) %>  |  <%= link_to "Back",posts_path %></p>
</div>